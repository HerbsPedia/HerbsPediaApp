<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:paddingTop="56dp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Profile"
                style="@style/TextView.PoppinsNormal14sp8D92A3"
                android:textSize="26sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                android:textColor="@color/backgroundColor"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:gravity="center_vertical"
                android:background="@drawable/et_bg"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="17dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_bg"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_profile2"
                        android:scaleType="fitXY"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_username_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/username"
                        style="@style/TextView.PoppinsNormal14sp8D92A3"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:id="@+id/tv_username_profile2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/username"

                        style="@style/TextView.PoppinsNormal14sp8D92A3"
                        android:textSize="15sp"
                        android:textColor="#000000"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:gravity="center_vertical"
                android:background="@drawable/et_bg"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="17dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_bg"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:src="@drawable/ic_email"
                        android:scaleType="fitXY"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_email_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login_email"
                        style="@style/TextView.PoppinsNormal14sp8D92A3"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:id="@+id/tv_email_profile2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login_email"
                        style="@style/TextView.PoppinsNormal14sp8D92A3"
                        android:textSize="15sp"
                        android:textColor="#000000"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:gravity="center_vertical"
                android:background="@drawable/et_bg"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="17dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_bg"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:src="@drawable/ic_lock"
                        android:scaleType="fitXY"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_password_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login_password"
                        style="@style/TextView.PoppinsNormal14sp8D92A3"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:id="@+id/tv_password_profile2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextView.PoppinsNormal14sp8D92A3"
                        android:text="@string/password_marked"
                        android:textSize="15sp"
                        android:textColor="#000000"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/logout"
                    style="@style/TextView.PoppinsNormal14sp8D92A3"
                    android:background="@drawable/btn_bg"/>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>